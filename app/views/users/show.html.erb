<h2>ログイン済Home画面です。</h2>


<!-- ここからプロフィール画面 -->
<h3>User info</h3>

<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
<p>name</p>
<p class="profile-name"><%= @user.name %></p>
<p>introduction</p>
<p class="profile-introduction"><%= @user.introduction %></p>
<% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
<% end %>
<!-- ここまでプロフィール画面 -->

<!-- ここから新規投稿画面 -->
<h3>New book</h3>

<%= form_for(@book) do |f| %>

  <p>Title</p>
    <%= f.text_field :title %>
  <p>Opinion</p>
    <%= f.text_area :opinion %>
  <br>
    <%= f.submit "Create Book" %>

<% end %>
<!-- ここまで新規投稿画面 -->


<!-- ここから一覧画面	 -->
<h3>Books</h3>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>User Image</td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.opinion %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<!-- ここまで一覧画面 -->


