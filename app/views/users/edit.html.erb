<h2>プロフィール編集画面です</h2>

<h3>User info</h3>

<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for(@user) do |f| %>

    <div class="form-group has-icon">
        <label>Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail" %>
    </div>

    <br>

    <div class="form-group has-icon">
	    <div class="user-edit-image">
	    </div>
	    <label>Image</label><br>
	    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
	   </div>

	   <div class="form-group has-icon">
        <label>Introduction</label>
        <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputEmail" %>
    </div>

    <%= f.submit 'Update User' %>
<% end %>

