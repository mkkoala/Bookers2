<h2>プロフィール編集画面です</h2>

<h3>User info</h3>

<%= form_for(@user) do |f| %>

    <div class="form-group has-icon">
        <label>Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail" %>
    </div>

    <br>

    <div class="form-group has-icon">
	    <div class="user-edit-image">
	        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb" %>
	    </div>
	    <label>Image</label><br>
	    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
	</div>

	<div class="form-group has-icon">
        <label>Introduction</label>
        <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputEmail" %>
    </div>

    <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>

