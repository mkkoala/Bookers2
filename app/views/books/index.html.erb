<h2>Books画面です。</h2>


<!-- ここからプロフィール画面 -->
<h3>User info</h3>

<p>User Image</p>
<p>name</p>
<p>introduction</p>
<p>プロフィール編集</p>
<!-- ここまでプロフィール画面 -->

<!-- ここから新規投稿画面 -->
<h3>New book</h3>

<%= form_for(@book) do |f| %>

  <p>Title</p>
    <%= f.text_field :title %>
  <p>Opinion</p>
    <%= f.text_area :opinion %>
  <br>
    <%= f.submit "Create Book" %>

<% end %>
<!-- ここまで新規投稿画面 -->


<!-- ここから一覧画面	 -->
<h3>Books</h3>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>User Image</td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.opinion %></td>
      </tr>
    <% end %>
    <%= paginate @books, class: "paginate" %>
  </tbody>
</table>
<!-- ここまで一覧画面 -->




